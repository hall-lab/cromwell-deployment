
{% set staticIpName = env['deployment'] + '-static-ip' %}
{% set cromwellServerName = env['deployment'] + '-cromwell' %}
{% set cloudsqlName = env['deployment'] + '-cloudsql' %}

resources:

- name: {{ staticIpName }}
  type: compute.v1.address
  properties:
    region: {{ properties["region"] }}
    networkTier: PREMIUM

- name: {{ cromwellServerName }}
  type: compute.v1.instance
  properties:
    region: {{ properties['region'] }}
    zone: {{ properties['zone'] }}
    machineType: https://www.googleapis.com/compute/v1/projects/{{ env["project"] }}/zones/{{ properties["zone"] }}/machineTypes/{{ properties["cromwell_server_machine_type"] }}
    minCpuPlatform: Intel Skylake
    serviceAccounts:
      - email: {{ properties['service_account_email'] }}
        scopes:
          - https://www.googleapis.com/auth/cloud-platform
    disks:
      - deviceName: boot
        type: PERSISTENT
        boot: true
        autoDelete: true
        initializeParams:
          sourceImage: https://www.googleapis.com/compute/v1/projects/debian-cloud/global/images/family/debian-9
          diskType: https://www.googleapis.com/compute/v1/projects/{{ env["project"] }}/zones/{{ properties["zone"] }}/diskTypes/pd-standard
          diskSizeGb: {{ properties['cromwell_server_boot_disk_size'] }}
    networkInterfaces:
    - network: https://www.googleapis.com/compute/v1/projects/washu-genome-inh-dis-analysis/global/networks/default
      accessConfigs:
      - name: External NAT
        type: ONE_TO_ONE_NAT
        natIP: $(ref.{{ staticIpName }}.address)
    metadata:
      items:
        - key: startup-script
          value: |
            {{ imports["../../scripts/cromwell-startup-script.py"]|indent(12)|replace("@CROMWELL_VERSION@",properties["cromwell_version"])|replace("@CROMWELL_CLOUDSQL_SERVER@",properties["cromwell_cloudsql_server"])|replace("@CROMWELL_CLOUDSQL_PASSWORD@",properties["cromwell_cloudsql_password"]) }}
        - key: cromwell-service
          value: |
            {{ imports["../cromwell-configs/systemd/cromwell.service"]|indent(12)|replace("@CROMWELL_VERSION@",properties["cromwell_version"])|replace("@CROMWELL_CLOUDSQL_PASSWORD@",properties["cromwell_cloudsql_password"]) }}
        - key: papi-v2-conf
          value: |
            {{ imports["../cromwell-configs/PAPI.v2.conf"]|indent(12)|replace("@CROMWELL_CLOUDSQL_PASSWORD@",properties["cromwell_cloudsql_password"]) }}

- name: {{ cloudsqlName }}
  type: sqladmin.v1beta4.instance
  properties:
    backendType: SECOND_GEN
    instanceType: CLOUD_SQL_INSTANCE
    databaseVersion: MYSQL_5_7
    region: {{ properties['region'] }}
    settings:
      tier: {{ properties['cromwell_cloudsql_instance_type'] }}
      dataDiskSizeGb: {{ properties['cromwell_cloudsql_initial_size'] }}
      dataDiskType: PD_SSD
      storageAutoResize: true
      replicationType: SYNCHRONOUS
      locationPreference:
        zone: {{ properties['zone'] }}
      activationPolicy: ALWAYS
      backupConfiguration:
        enabled: true
        binaryLogEnabled: true
      ipConfiguration:
        authorizedNetworks: [ $(ref.{{ staticIpName }}.address)/32, 128.252.0.0/24 ]
  metadata:
    dependsOn:
      - {{ cromwellServerName }}

- name: {{ env['deployment'] }}-db-root
  type: sqladmin.v1beta4.user
  properties:
    name: root
    password: {{ properties['cromwell_cloudsql_password'] }}
    instance: $(ref.{{cloudsqlName}}.selfLink)
  metadata:
    dependsOn:
      - {{ cloudsqlName }}
